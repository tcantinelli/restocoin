{% extends 'base.html.twig' %} {% block body %} {{ parent() }}
<div class="container-fluid">
    <div class="row bandeau">
        <div class="row insideBandeau">
            <div class="col titreBandeauL mx-auto">
                ~ Menus du jour ~
            </div>
        </div>
        <div class="row insideBandeau ">
            {% for menu in listeMenus %}
                <div class="col menuCol">
                    <div class="row justify-content-center">
                        <h3>Menu {{ menu.nom }}</h3>
                    </div>
                    <div class="row justify-content-center">
                        <p>{{ menu.description }}</p>
                    </div>
                    <div class="row">
                        {% for plat in menu.listePlats %}
                        <div class="col">
                            <div class="card mx-auto" style="width: 15rem;">
                                <img class="card-img-top" src={{ 'build/images/' ~ plat.image }} alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">{{ plat.type.intitule }}</h5>
                                    <h5 class="card-title">{{ plat.nom }}</h5>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}